<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="weareplanet-base" type="host">https://app-wallee.com</value>
                <value id="weareplanet" type="host">https://paymentshub.weareplanet.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="weareplanet-base" type="host">https://app-wallee.com</value>
                <value id="weareplanet" type="host">https://paymentshub.weareplanet.com</value>
                <value id="weareplanet-mfgroup" type="host">https://gmtech.mfgroup.ch</value>
                <value id="weareplanet-visa" type="host">https://assets.secure.checkout.visa.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="weareplanet-base" type="host">https://app-wallee.com</value>
                <value id="weareplanet" type="host">https://paymentshub.weareplanet.com</value>
                <value id="weareplanet-visa" type="host">https://assets.secure.checkout.visa.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="weareplanet-base" type="host">https://app-wallee.com</value>
                <value id="weareplanet" type="host">https://paymentshub.weareplanet.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="weareplanet-base" type="host">https://app-wallee.com</value>
                <value id="weareplanet" type="host">https://paymentshub.weareplanet.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
